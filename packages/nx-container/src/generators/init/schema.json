{
  "$schema": "https://json-schema.org/schema",
  "$id": "Configuration",
  "title": "",
  "type": "object",
  "required": [],
  "properties": {
    "defaultEngine": {
      "type": "string",
      "description": "Provide the default container engine to be used.",
      "default": "docker",
      "enum": ["docker", "podman", "kaniko"],
      "x-prompt": {
        "message": "Which type of engine would you like to use?",
        "type": "list",
        "items": [
          {
            "value": "docker",
            "label": "Docker"
          },
          {
            "value": "podman",
            "label": "Podman"
          },
          {
            "value": "kaniko",
            "label": "Kaniko"
          }
        ]
      },
      "alias": "e"
    },
    "defaultRegistry": {
      "type": "string",
      "description": "Provide the default registry to be used.",
      "default": "docker.io",
      "alias": "r"
    }
  }
}
