{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/nx-docker/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/nx-docker",
        "main": "packages/nx-docker/src/index.ts",
        "tsConfig": "packages/nx-docker/tsconfig.lib.json",
        "assets": [
          "packages/nx-docker/*.md",
          {
            "input": "./packages/nx-docker/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/nx-docker/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/nx-docker",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/nx-docker",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/nx-docker/**/*.ts",
          "packages/nx-docker/generators.json",
          "packages/nx-docker/executors.json",
          "packages/nx-docker/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/nx-docker"],
      "options": {
        "jestConfig": "packages/nx-docker/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "baseBranch": "main",
        "preset": "conventional",
        "tagPrefix": "${projectName}@",
        "commitMessageFormat": "chore(${projectName}): release version ${version}"
      }
    }
  },
  "tags": ["type:plugin"]
}
